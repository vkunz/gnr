<?xml version="1.0" encoding="UTF-8"?>
<webseite 
		layout="border"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="http://www.hs-ulm.de/_schema/0.9/presentation/webseite.xsd">

<inhalt position="top">
	<docbook>
		<include src="top.dbx"></include>
	</docbook>
</inhalt>

<inhalt position="left">
	<docbook>
		<include src="left.dbx"></include>
	</docbook>
	<include src="dir:_images/*.*?bilder"></include>
</inhalt>

<inhalt position="right">
	<docbook>
		<include src="right.dbx"></include>
	</docbook>	
</inhalt>

<inhalt position="bottom">
	<docbook>
		<include src="bottom.dbx"></include>
	</docbook>
	<medienkatalog>
		<kuerzel></kuerzel>
		<beschreibung>
			<docbook>
				<include src="medienkatalog-beschreibung.dbx"></include>
			</docbook>
		</beschreibung>		
			<include src="dir:_medienkatalog/*.*?medien"></include>
	</medienkatalog>
</inhalt>

<kontakt>
   <include src="/_ctx/default.xml" maxlevel="2"/>
</kontakt>

<navigation>
	<referenzen>
		<include src="dir:_downloads/*.*" path="/referenzen/*"></include>
		<include src="_links/*.url"/>
	</referenzen>
</navigation>
  <copyright>
		<include src="/users/${owner}/default.xml" maxlevel="1"/>
	    <datum>${LastWriteTime}</datum>
	</copyright>	

</webseite>
